/* pages/template/areaChose/index.wxss */
page{
  background:#F0F0F0;
}
.serchTop{
  padding: 5px;
  box-sizing:border-box;
  width:100%;
  border-bottom:1px solid #e8e8e8
}
.input{
  width:98%;
  background:white;
  height:80rpx;
  line-height:80rpx;
  margin: 0 auto;
  border-radius:5px;
}
.containerBox{
  /* display:flex;
  justify-content: flex-start; */
  padding:10rpx;
  box-sizing:border-box;
  background:white; 
  font-size:28rpx;
  background:white;
  padding-bottom:0;
}
.title{
  background:#F0F0F0;
  width:90%;
  height:60rpx;
  line-height:60rpx;
  font-size:26rpx;
  padding:0 10rpx;
}
.tabBox{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tabItem{
  width:150rpx;
  height:60rpx;
  margin:20rpx;
  text-align:center;
  line-height:60rpx;
  font-size:28rpx;
  border-radius:3px;
  border:1px solid #e8e8e8;
  display:inline-block
}
.rightTips{
  position:fixed;
  width:30rpx; 
  word-wrap: break-word;
  right:15rpx;
  top:120rpx;
  height:200rpx; 
  color:black;
}
.tipItem{
  position:relative;
  writing-mode: vertical-lr-tb; 
  height:30rpx;
  display:inline-block
}